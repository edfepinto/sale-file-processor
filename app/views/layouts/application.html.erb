      <ul>
        <li><%= link_to 'Upload de Arquivo', upload_form_sales_path %></li>
        <li><%= link_to 'Listagem de Vendas', list_sales_sales_path %></li>
        <li><%= link_to 'Listagem de UsuÃ¡rios', users_path %></li>
      </ul>
    </nav>

    <% if session[:user_id] %>
      <%= link_to 'Logout', logout_path, method: :delete %>
