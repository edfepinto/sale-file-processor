<h1>Lista de vendas</h1>

<table>
  <thead>
    <tr>
      <th>Nome do comprador</th>
      <th>Descrição do Item</th>
      <th>Preço do Item</th>
      <th>Nome do vendedor</th>
    </tr>
  </thead>
  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.purchaser_name%></td>
        <td><%= sale.item_description %></td>
        <td><%= sale.item_price %></td>
        <td><%= sale.merchant_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>


